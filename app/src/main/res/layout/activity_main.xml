<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/lblMakeYourOwnPizza"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Make your Own Pizza!"
        android:layout_marginLeft="15dp"
        android:textStyle="bold|italic"
        android:textSize="20sp">
    </TextView>

    <RelativeLayout
        android:id="@+id/layoutPizzaProperties"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="15dp"
        android:paddingTop="15dp"
        android:paddingLeft="25dp">

        <TextView
            android:id="@+id/lblSize"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:text="Size of the pizzas"
            android:textSize="15sp"
            android:textStyle="bold">
        </TextView>

        <RadioGroup
            android:id="@+id/rgSize"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">

            <RadioButton
                android:id="@+id/rbSix"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/sixSlice">
            </RadioButton>

            <RadioButton
                android:id="@+id/rbEight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/eightSlice">
            </RadioButton>

            <RadioButton
                android:id="@+id/rbTen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/tenSlice">
            </RadioButton>

            <RadioButton
                android:id="@+id/rbTwelve"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/twelveSlice">
            </RadioButton>
        </RadioGroup>

        <TextView
            android:id="@+id/lblTopping"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="210dp"
            android:text="Topping"
            android:textStyle="bold"
            android:textSize="15sp">
        </TextView>

        <Spinner
            android:id="@+id/spTopping"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="230dp"
            android:tooltipText="Test">
        </Spinner>

        <CheckBox
            android:id="@+id/cbExtraCheese"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="255dp"
            android:text="Extra Cheese ($5) "
            android:textStyle="bold"
            android:textSize="15sp">>
        </CheckBox>

        <CheckBox
            android:id="@+id/cbDelivery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="300dp"
            android:text="Include delivery ($5)"
            android:textStyle="bold"
            android:textSize="15sp">>
        </CheckBox>


        <EditText
            android:id="@+id/etInstruction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:layout_marginTop="300dp"
            android:layout_marginLeft="175dp"
            android:hint="Special Instructions">
        </EditText>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layoutContact"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"

        android:layout_marginTop="370dp"
        android:paddingTop="40dp"
        android:paddingLeft="15dp">

        <TextView
            android:id="@+id/lblContactDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="5dp"
            android:text="Contact Details"
            android:textSize="15sp"
            android:textStyle="bold">
        </TextView>

        <EditText
            android:id="@+id/etName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="20dp"
            android:hint="Name">
        </EditText>

        <EditText
            android:id="@+id/etAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:layout_marginTop="80dp"
            android:layout_marginLeft="20dp"
            android:hint="Address">
        </EditText>

        <EditText
            android:id="@+id/etPhoneNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:layout_marginTop="130dp"
            android:layout_marginLeft="20dp"
            android:hint="Phone Number">
        </EditText>

        <EditText
            android:id="@+id/etEmailAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:layout_marginTop="180dp"
            android:layout_marginLeft="20dp"
            android:hint="Email Address">
        </EditText>
    </RelativeLayout>

    <Button
        android:id="@+id/btnSubmit"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="Submit"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="650dp">
    </Button>


</RelativeLayout>